@model IEnumerable<Greenpeace_Advisory.Models.RegisterViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Register")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
@if (User.IsInRole("SuperAdmin"))
{
        <td>        
            @Html.ActionLink("Edit", "EditAdmin", new { id=item.Username }) |
            @Html.ActionLink("Delete", "DeleteAdmin", new { id=item.Username })
        
        </td>
        }
    </tr>
}

</table>
