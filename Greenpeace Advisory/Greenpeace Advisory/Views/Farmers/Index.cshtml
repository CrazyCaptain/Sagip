@model IEnumerable<Greenpeace_Advisory.Models.Farmer>

@{
    ViewBag.Title = "Index";
}

<h2>Farmers</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "Farmers", FormMethod.Get)) { 
        <p>
        Last Name: @Html.TextBox("SearchFarmer") 
        <input type="submit" value="Search" />
        </p>
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MiddleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FarmerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FarmerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FarmerID }) |
        </td>
    </tr>
}

</table>
